<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  xmlns:tools="http://schemas.android.com/tools"
		  package="ru.rienel.shs.mobile">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@mipmap/ic_launcher_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="GoogleAppIndexingWarning">
		<activity
				android:name=".activity.login.LoginActivity"
				android:label="@string/test_text">
		</activity>
		<activity
				android:name=".activity.meter.MeterActivity"
				android:label="@string/meters">
		</activity>
		<activity
				android:name=".activity.person.PersonActivity"
				android:label="@string/persons">
		</activity>
		<activity
				android:name=".activity.bill.BillActivity"
				android:label="@string/bills">
		</activity>
		<activity
				android:name=".activity.user.UserActivity"
				android:label="@string/test_text">
		</activity>
		<activity
				android:name=".activity.main.MainActivity"
				android:label="@string/applicationTitle"
				android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".activity.settings.AppSettingsActivity"
				android:label="@string/settings">
		</activity>
	</application>

</manifest>