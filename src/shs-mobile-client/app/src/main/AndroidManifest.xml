<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  xmlns:tools="http://schemas.android.com/tools"
		  package="ru.rienel.shs.mobile">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
			android:allowBackup="true"
			android:icon="@drawable/app_icon"
			android:label="@string/appName"
			android:roundIcon="@drawable/app_icon"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="AllowBackup,GoogleAppIndexingWarning">
		<activity
				android:name=".activity.main.MainActivity"
				android:label="@string/applicationTitle"
				android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".activity.login.LoginActivity"
				android:label="@string/testText">
		</activity>
		<activity
				android:name=".activity.indication.IndicationActivity"
				android:label="@string/indications">
		</activity>
		<activity
				android:name=".activity.meter.MeterActivity"
				android:label="@string/meters"
				android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
				android:name=".activity.person.PersonActivity"
				android:label="@string/persons">
		</activity>
		<activity
				android:name=".activity.bill.BillActivity"
				android:label="@string/bills">
		</activity>
		<activity
				android:name=".activity.user.UserActivity"
				android:label="@string/testText">
		</activity>
		<activity
				android:name=".activity.settings.AppSettingsActivity"
				android:label="@string/settings">
		</activity>
		<activity
				android:name=".activity.indication.pager.IndicationPagerActivity"
				android:label="@string/indications"
				android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity android:name=".activity.meter.MeterFragment"/>
	</application>

</manifest>