<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				style="@style/RecyclerViewItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

	<TextView
			android:id="@+id/indicationListItemValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<TextView
			android:id="@+id/indicationListItemMeterLabel"
			android:text="@string/meter"
			android:layout_below="@id/indicationListItemValue"
			android:layout_marginEnd="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<TextView
			android:id="@+id/indication_list_item_meter"
			android:layout_toEndOf="@id/indicationListItemMeterLabel"
			android:layout_below="@id/indicationListItemValue"
			android:text="@string/testText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<ImageView
			android:id="@+id/indicationListItemResourceType"
			android:layout_alignParentEnd="true"
			android:layout_width="64dp"
			android:layout_height="64dp"/>
</RelativeLayout>