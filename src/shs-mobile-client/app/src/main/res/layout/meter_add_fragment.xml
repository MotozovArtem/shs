<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".activity.meter.MeterAddFragment">


	<TextView
			android:id="@+id/resourceMeterAddSerialNumberLabel"
			android:labelFor="@id/resourceMeterAddSerialNumberInput"
			android:text="@string/serialNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	<EditText
			android:id="@+id/resourceMeterAddSerialNumberInput"
			android:hint="@string/serialNumberHint"
			android:inputType="text"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			tools:ignore="TextFields"/>


	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<TextView
				android:id="@+id/resourceMeterAddResourceTypeLabel"
				android:labelFor="@id/resourceMeterAddResourceTypeInput"
				android:text="@string/selectResourceType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<Spinner
				android:id="@+id/resourceMeterAddResourceTypeInput"
				android:hint="@string/serialNumberHint"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	</LinearLayout>


	<Button
			android:id="@+id/resourceMeterAddButton"
			android:text="@string/add"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:ignore="RtlHardcoded"/>

</LinearLayout>